# {{ ansible_managed }}

# Where and how to store data.
storage:
  dbPath: {{ mongo_db_path }}
  journal:
    enabled: true

# where to write logging data.
systemLog:
  destination: file
  logAppend: true
  quiet: true
  path: {{ mongo_log_path }}

# network interfaces
net:
  port: {{ mongo_port }}
  bindIp: {{ mongo_ip }}

# how the process runs
processManagement:
  timeZoneInfo: /usr/share/zoneinfo
  pidFilePath: {{ mongo_pid_path }}

