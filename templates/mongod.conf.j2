# {{ ansible_managed }}

# Where and how to store data.
storage:
  dbPath: {{ mongo_db_path }}
  journal:
    enabled: true

# where to write logging data.
systemLog:
  destination: file
  logAppend: true
  path: /var/log/mongodb/mongod.log

# network interfaces
net:
  port: {{ mongo_port }}
  bindIp: {{ mongo_ip }}

# how the process runs
processManagement:
  timeZoneInfo: /usr/share/zoneinfo

